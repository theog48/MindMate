{% extends 'base.html.twig' %}

{% block title %}Résultats du quiz
{% endblock %}

{% block body %}
	<div class="quiz-container" style="max-width: 900px; margin: auto;">

		<h2 class="quiz-title" style="text-align: center; margin-bottom: 30px; color: #030e1f;">
			Résultats du quiz :
			{{ quizz.titre }}
		</h2>

		<div class="quiz-result">
