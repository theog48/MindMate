{{ form_start(form) }}

<div class="mb-3">
	<label for="titre">Titre de votre cours :</label>
	{{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
</div>

<div class="mb-3">
	<label for="contenu">Entrez votre cours ici :</label>
	{{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'Contenu'}}) }}
</div>

<button class="btn btn-primary">{{ button_label|default('Cr√©er le cours') }}</button>

{{ form_end(form) }}
