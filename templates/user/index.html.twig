{% extends 'base.html.twig' %}

{% block title %}ADMIN{% endblock %}

{% block body %}
    <h1>ADMIN</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>NbToken</th>
                <th>CreatedAt</th>
                <th>HasTestPremium</th>
                <th>DateFinPremium</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.nbToken }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.hasTestPremium ? 'Yes' : 'No' }}</td>
                <td>{{ user.dateFinPremium ? user.dateFinPremium|date('Y-m-d') : '' }}</td>
                <td class="action-buttons">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="10">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="button-container">
    <a href="{{ path('app_user_new') }}" class="create-button">Create new</a>
</div>
{% endblock %}
