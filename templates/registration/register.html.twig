{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {# Affichage des erreurs globales du formulaire (comme les erreurs liées à la correspondance des mots de passe) #}
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {# Affichage du champ nom #}
        {{ form_row(registrationForm.nom) }}
        
        {# Affichage du champ email #}
        {{ form_row(registrationForm.email) }}
        
        {# Affichage du champ pour accepter les termes et conditions #}
        {{ form_row(registrationForm.agreeTerms) }}
        
        {# Affichage du champ mot de passe #}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        
        {# Affichage du champ pour confirmer le mot de passe #}
        {{ form_row(registrationForm.confirmPassword, {
            label: 'Confirmez le mot de passe'
        }) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
