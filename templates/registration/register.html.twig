{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> {# Ensure the correct path to your CSS file #}
{% endblock %}

{% block body %}
    <div class="registration-container">

        <form method="post" action="{{ path('app_register') }}" class="styled-form">
                    <h1 class="h3 mb-3 font-weight-normal">INSCRIVEZ-VOUS</h1>

            {{ form_start(registrationForm) }}

            {% if registrationForm.nom is defined %}
                <label for="{{ registrationForm.nom.vars.id }}">Pseudonym</label>
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            {% endif %}

            <label for="{{ registrationForm.email.vars.id }}">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}

            <label for="{{ registrationForm.plainPassword.vars.id }}">Password</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}

            {% if registrationForm.confirmPassword is defined %}
                <label for="{{ registrationForm.confirmPassword.vars.id }}">Confirm Password</label>
                {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
            {% endif %}

            <div class="form-check mt-3">
                {{ form_widget(registrationForm.agreeTerms) }}
                <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                    I agree with your site's terms and conditions
                </label>
            </div>

            <button type="submit" class="btn btn-lg btn-primary btn-block mt-4">Register</button>

            {{ form_end(registrationForm) }}
        </form>
    </div>
{% endblock %}
