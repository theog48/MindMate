{% extends 'base.html.twig' %}

{% block title %}Profil de l'Utilisateur{% endblock %}

{% block body %}

    <h1>welcome {{ user.nom }}</h1>

    <h1 class"title profil-title">Mes Cours</h1>
    {# <div class="search-bar">
        <input type="text" placeholder="Recherchez un cours...">
        <button>Rechercher</button>
    </div> #}

    <table class="table profil-table">
        <thead>
            <tr>
                <th>Nom DE COURS</th>
                <th>Date fin premium</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours %}
                <tr>
                    <td>{{ cours.titre }}</td>
                    <td>{{ cours.createdAt ? cours.createdAt|date('Y-m-d') : '' }}</td>
                    <td>
                        <div class="button-container">
                            <a href="{{ path('app_cours_show', {'id': cours.id}) }}" class="btn btn-show">Show</a>

                            <a href="{{ path('app_cours_edit', {'id': cours.id}) }}" class="btn btn-edit">Edit</a>
                            
                            {# <a href="{{ path('app_cours_delete', {'id': cours.id}) }}" class="btn btn-edit">Delete</a> #}

                            {# <form class="table-action-no-form" style="" method="post" action="{{ path('app_cours_delete', {'id': cours.id}) }}" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form> #}

                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No courses found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        <div class="button-container">
        <a href="{{ path('app_cours_new') }}" class="create-button">Create new</a>
    </div>

{% endblock %}
